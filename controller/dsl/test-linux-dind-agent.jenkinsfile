pipeline {
    agent {
        node 'linux && dind'
    }
    stages {
        stage('docker-run') {
            steps {
                sh 'ls -al'
                sh 'docker --version'
                sh 'docker info'
                sh 'docker run --rm busybox echo "Hello from BusyBox!"'
                sh 'git --version'
            }
        }
        stage('docker-agent') {
            agent {
                docker {
                    image 'busybox:latest'
                    reuseNode true
                }
            }
            steps {
                sh 'touch test-file && ls -al'
            }
        }
    }
    post {
        cleanup {
            cleanWs()
        }
    }
}
