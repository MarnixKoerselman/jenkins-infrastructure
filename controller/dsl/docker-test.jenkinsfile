pipeline {
    agent {
        node 'built-in'
    }
    stages {
        stage('docker info') {
            steps {
                sh 'docker info'
            }
        }
        stage('busybox') {
            agent {
                docker {
                    image 'busybox:stable'
                    args '-p 3000:3000 -p 5000:5000'
                    reuseNode true
                }
            }
            steps {
                sh 'ls -al'
            }
        }
    }
}
