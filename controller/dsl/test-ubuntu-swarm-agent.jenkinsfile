pipeline {
    agent {
        node 'swarm && ubuntu-22.04 && linux && docker.sock'
    }
    tools {
        dockerTool 'docker@latest'
    }
    stages {
        stage('installed') {
            steps {
                sh 'ls -al'
                sh 'git --version || true'
                sh 'apt list --installed'
                sh 'apt update && apt install -y git'
            }
        }
        stage('dockertool') {
            steps {
                sh 'docker --version'
                sh 'docker info'
                sh 'docker run --rm busybox ls -al'
            }
        }
